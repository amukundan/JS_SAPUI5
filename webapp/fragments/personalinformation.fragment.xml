<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<f:SimpleForm editable="true">
		<f:content>
			<core:Title text="Personal Details"/>
			<Label design="Bold" text="First Name"></Label>
			<Input id="inpfrgFirst" placeholder="Please provide your first name" width="60%"></Input>
			<Label design="Bold" text="Last Name"></Label>
			<Input id="inpfrgLast" placeholder="Please provide your last name" width="60%"></Input>
			<!--Date picker used-->
			<Label design="Bold" text="Date of Birth"></Label>
			<DatePicker id="iddpfrgDoB" displayFormat="dd.MMM.yyyy" valueFormat="dd.MMM.yyyy" width="60%"></DatePicker>
			<!--<RadioButtonGroup id="rbfrgGendergrp" columns="2" selectedIndex="-1">
				<buttons>
					<RadioButton groupName="Gender" text="Male"/>
					<RadioButton groupName="Gender" text="Female"/>
				</buttons>
			</RadioButtonGroup>-->
			<core:Title text="Address Information"/>
			<Label design="Bold" text="Address Line1"></Label>
			<Input id="inpfrgline1" placeholder="Please provide your HouseNo.,Apartment complex" width="60%"></Input>
			<Label design="Bold" text="Address Line2"></Label>
			<Input id="inpfrgline2" placeholder="Please provide your Locality" width="60%"></Input>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>